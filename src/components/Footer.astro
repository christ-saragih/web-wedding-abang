    <!-- Divider -->
    <div class="border-t border-cream/20 pt-8">
      <!-- Bottom Credits -->
      <div class="text-center">
        <p class="text-cream/60 text-sm mb-2">
          Made with <span class="text-primary">❤</span> using Astro & Tailwind CSS
        </p>
        <p class="text-cream/40 text-xs">
          © 2025 Wedding Celebration — Adat Batak Simalungun
        </p>
      </div>
    </div>

    <!-- Scroll to Top Button -->
    <div class="text-center mt-8">
      <a
        href="#home"
        class="inline-flex items-center justify-center w-12 h-12 bg-gold rounded-full text-dark hover:bg-gold/90 transition-smooth hover:scale-110 shadow-lg"
        aria-label="Scroll to top"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  .bg-dark {
    background-color: var(--color-dark);
  }

  .text-cream {
    color: var(--color-cream);
  }

  .text-gold {
    color: var(--color-gold);
  }

  .bg-gold {
    background-color: var(--color-gold);
  }

  .text-dark {
    color: var(--color-dark);
  }

  .text-primary {
    color: var(--color-primary);
  }
</style>
