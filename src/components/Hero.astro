---
import { ArrowRight, HeartHandshake, MailOpen, Rose, Sparkles } from "lucide-react";

// Hero Section - Landing Page
---

<section id="home" class="hero relative min-h-screen pt-2 md:pt-24 bg-gradient-to-br from-cream via-cream/95 to-gold/10">
  <!-- Decorative Pattern Overlay -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none bg-[url('/images/patterns/01.svg')] bg-[length:240px] md:bg-[length:300px] bg-repeat"></div>
  
  <!-- Animated Particles/Ulos Motif -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="ulos-particle ulos-particle-1"></div>
    <div class="ulos-particle ulos-particle-2"></div>
    <div class="ulos-particle ulos-particle-3"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-2 gap-10 md:gap-12 items-center">
        <!-- Left Content -->
        <div class="relative flex flex-col items-center md:items-start">

          <!-- Ornament Top with glow effect -->
          <div class="hidden md:block md:mb-6 fade-in">
            <img class="w-24 h-24 md:w-32 md:h-32 relative z-10 drop-shadow-2xl hover:scale-110 transition-transform duration-500" src="/images/batak-house.svg" alt="batak house">
          </div>
      
          <!-- Greeting with decorative line -->
          <div class="flex items-center gap-4 mt-4 md:mt-0 mb-4 fade-in" style="animation-delay: 0.2s;">
            <div class="h-[2px] w-8 md:w-12 bg-gradient-to-r from-transparent via-gold to-gold"></div>
            <p class="font-heading text-shadow-lg text-dark text-xs tracking-[0.1em] md:text-base md:tracking-[0.3em] uppercase">
              MAULIATE MA DI HALAK NASA
            </p>
            <div class="h-[2px] w-8 md:w-12 bg-gradient-to-l from-transparent via-gold to-gold"></div>
          </div>
      
          <!-- Couple Names with enhanced styling -->
          <div class="relative mb-3">
            <h1 class="text-4xl md:text-6xl lg:text-7xl leading-tight font-bold fade-in font-heading italic text-dark relative" style="animation-delay: 0.4s;">
              Bagas 
              <span class="text-gold inline-block mx-2 animate-pulse-slow">&</span> 
              Firda
            </h1>
          </div>
          
          <div class="flex items-center gap-3 mb-6 md:mb-8 fade-in" style="animation-delay: 0.5s;">
            <p class="text-dark/70 font-medium tracking-wide">Saragih â€” Simanjuntak</p>
          </div>
      
          <!-- Countdown Timer with enhanced design -->
          <div class="mb-8 md:mb-10 fade-in flex justify-center md:block w-full" style="animation-delay: 0.6s;">
            <div class="grid grid-cols-4 gap-4 max-w-[400px]">
              <div >
                <div id="days" class="font-heading text-xl md:text-2xl font-semibold mb-2">00</div>
                <div class="text-xs md:text-sm uppercase tracking-wider text-dark/70">Hari</div>
              </div>
              <div >
                <div id="hours" class="font-heading text-xl md:text-2xl font-semibold mb-2">00</div>
                <div class="text-xs md:text-sm uppercase tracking-wider text-dark/70">Jam</div>
              </div>
              <div >
                <div id="minutes" class="font-heading text-xl md:text-2xl font-semibold mb-2">00</div>
                <div class="text-xs md:text-sm uppercase tracking-wider text-dark/70">Menit</div>
              </div>
              <div >
                <div id="seconds" class="font-heading text-xl md:text-2xl font-semibold mb-2">00</div>
                <div class="text-xs md:text-sm uppercase tracking-wider text-dark/70">Detik</div>
              </div>
            </div>
          </div>
      
          <!-- Wedding Date / CTA Buttons -->
          <div class="fade-in" style="animation-delay: 1s;">
              <a href="#event" data-unlock class="w-fit text-sm md:text-base group bg-gradient-to-r from-primary to-primary/90 text-white py-3 px-10 rounded-full font-semibold shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 flex items-center gap-2 border-2 border-transparent hover:border-white/30">
                <MailOpen className="w-5 h-5 animate-bounce" />
                <span>Lihat Undangan</span>
              </a>
          </div>
          
        </div>
      
        <!-- Right Content - Enhanced Image Section -->
         <div class="justify-self-center md:justify-self-end relative">
             
             <!-- Static Ulos with pulse -->
             <img src="/images/ulos.svg" alt="ulos batak" class="fade-in absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] max-w-none h-auto opacity-50" style="animation-delay: 0.8s;">

             <!-- Glowing ring effect -->
             <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[110%] h-[110%] rounded-full bg-gradient-to-r from-gold/20 via-primary/20 to-gold/20 blur-2xl animate-pulse-slow"></div>

             <!-- Portrait with enhanced styling -->
             <div class="relative p-3 rounded-full bg-gradient-to-br from-white/80 via-white/70 to-gold/30 shadow-2xl fade-in backdrop-blur-sm" style="animation-delay: 1.1s;">
               <!-- Inner decorative ring -->
               <div class="relative p-2 rounded-full bg-white/60 backdrop-blur-sm">
                 <div class="rounded-full overflow-hidden border-[6px] border-gold shadow-2xl relative group">
                   <img src="/images/foto-01.jpg" alt="hero image" class="w-[240px] h-[240px] md:w-[380px] md:h-[380px] object-cover rounded-full animate-float group-hover:scale-110 transition-transform duration-700">
                   <!-- Overlay gradient on hover -->
                   <div class="absolute inset-0 bg-gradient-to-t from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-full"></div>
                 </div>
               </div>
               
               <!-- Decorative hearts/ornaments around image -->
               <div class="absolute top-6 -right-6 w-12 h-12 bg-gradient-to-br from-gold to-primary rounded-full flex items-center justify-center shadow-lg animate-bounce-slow">
                <HeartHandshake className="w-6 h-6 text-white" />
              </div>
              
              <div
                class="absolute top-6 -left-6 md:top-auto md:bottom-6 md:-left-6 w-12 h-12 bg-gradient-to-br from-primary to-gold rounded-full flex items-center justify-center shadow-lg animate-bounce-slow"
                style="animation-delay: 0.5s;"
              >
                <Rose className="w-6 h-6 text-white" />
              </div>
             </div>
             
             <!-- Decorative text badge -->
             <div class="absolute -bottom-8 left-1/2 -translate-x-1/2 bg-gradient-to-r from-primary via-gold to-primary text-white px-6 py-2 rounded-full shadow-xl font-heading text-sm tracking-wider fade-in whitespace-nowrap flex items-center space-x-1" style="animation-delay: 1.3s;">
               <Sparkles className="w-4 h-4 text-yellow-500" />
               <span>Ito-on Mangantoosi</span>
               <Sparkles className="w-4 h-4 text-yellow-500" />
             </div>
         </div>
    </div>

  <!-- Wave Divider -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
    <svg class="relative block w-full h-[80px] md:h-[120px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none">
      <path 
        fill="currentColor" 
        fill-opacity="0.15" 
        class="text-gold"
        d="M0,192L48,197.3C96,203,192,213,288,218.7C384,224,480,224,576,202.7C672,181,768,139,864,133.3C960,128,1056,160,1152,170.7C1248,181,1344,171,1392,165.3L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z">
      </path>
      <path 
        fill="currentColor" 
        fill-opacity="0.3" 
        class="text-primary"
        d="M0,224L48,213.3C96,203,192,181,288,186.7C384,192,480,224,576,224C672,224,768,192,864,170.7C960,149,1056,139,1152,154.7C1248,171,1344,213,1392,234.7L1440,256L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        style="animation-delay: 0.5s;">
      </path>
      <path 
        fill="currentColor"
        class="text-cream" 
        fill-opacity="1"
        d="M0,256L48,240C96,224,192,192,288,192C384,192,480,224,576,224C672,224,768,192,864,181.3C960,171,1056,181,1152,197.3C1248,213,1344,235,1392,245.3L1440,256L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        style="animation-delay: 1s;">
      </path>
    </svg>
  </div>
  
</section>

<style>
  /* Hero radial highlight with enhanced gradient */
  .hero::after {
    content: "";
    position: absolute;
    inset: -10% auto auto -10%;
    width: min(60vw, 800px);
    height: min(60vw, 800px);
    border-radius: 9999px;
    background: radial-gradient(circle, rgba(212,175,55,0.18), rgba(139,69,19,0.08) 40%, rgba(212,175,55,0) 70%);
    filter: blur(50px);
    pointer-events: none;
    z-index: 0;
    animation: pulse-glow 4s ease-in-out infinite;
  }

  /* Floating ulos particles */
  .ulos-particle {
    position: absolute;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(212,175,55,0.1), rgba(139,69,19,0.1));
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    animation: float-particle 20s ease-in-out infinite;
  }
  
  .ulos-particle-1 {
    top: 10%;
    right: 15%;
    animation-delay: 0s;
  }
  
  .ulos-particle-2 {
    bottom: 20%;
    left: 10%;
    animation-delay: 5s;
    width: 60px;
    height: 60px;
  }
  
  .ulos-particle-3 {
    top: 60%;
    right: 5%;
    animation-delay: 10s;
    width: 100px;
    height: 100px;
  }

  @keyframes float-particle {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
      opacity: 0.2;
    }
    25% {
      transform: translate(20px, -30px) rotate(90deg);
      opacity: 0.4;
    }
    50% {
      transform: translate(-10px, -50px) rotate(180deg);
      opacity: 0.3;
    }
    75% {
      transform: translate(-30px, -20px) rotate(270deg);
      opacity: 0.5;
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeInUp 1s ease-out forwards;
    opacity: 0;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float { 
    animation: float 6s ease-in-out infinite; 
  }

  @keyframes spin-slow {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }
  
  .animate-spin-slow {
    animation: spin-slow 60s linear infinite;
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.02);
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 3s ease-in-out infinite;
  }

  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }

  .text-gold {
    color: var(--color-gold);
  }

  .text-cream {
    color: var(--color-cream);
  }

  /* Smooth transitions */
  .transition-smooth {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

<script>
  // Countdown Timer
  function updateCountdown() {
    // Set wedding date - Update this to your actual wedding date
    // Using explicit timezone (+07:00 for WIB) to avoid differences across visitor timezones
    const weddingDate = new Date('2025-12-13T09:00:00+07:00').getTime();
    
    const now = new Date().getTime();
    const distance = weddingDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    const daysEl = document.getElementById('days');
    const hoursEl = document.getElementById('hours');
    const minutesEl = document.getElementById('minutes');
    const secondsEl = document.getElementById('seconds');

    if (daysEl) daysEl.textContent = String(days).padStart(2, '0');
    if (hoursEl) hoursEl.textContent = String(hours).padStart(2, '0');
    if (minutesEl) minutesEl.textContent = String(minutes).padStart(2, '0');
    if (secondsEl) secondsEl.textContent = String(seconds).padStart(2, '0');

    if (distance < 0) {
      if (daysEl) daysEl.textContent = '00';
      if (hoursEl) hoursEl.textContent = '00';
      if (minutesEl) minutesEl.textContent = '00';
      if (secondsEl) secondsEl.textContent = '00';
    }
  }

  // Update countdown immediately
  updateCountdown();
  
  // Update countdown every second
  setInterval(updateCountdown, 1000);
</script>
