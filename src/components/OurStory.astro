---
import TimelineTabs from "@/components/TimelineTabs";
// Our Story Section - Timeline Perjalanan Cinta
---

<section id="our-story" class="py-20 px-4 bg-cream">
  <div class="max-w-6xl mx-auto">
    <!-- Section Title -->
    <div class="text-center mb-10 md:mb-16 fade-in">
      <h2 class="font-heading text-4xl md:text-5xl font-bold text-primary mb-4">
        Kisah Kami
      </h2>
      <div class="w-24 h-1 bg-gold mx-auto mb-6"></div>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Perjalanan cinta kami dimulai dengan sebuah takdir yang indah
      </p>
    </div>

    <TimelineTabs client:load />

  </div>
</section>

<style>
  .text-primary {
    color: var(--color-primary);
  }
  
  .bg-primary {
    background-color: var(--color-primary);
  }

  .text-gold {
    color: var(--color-gold);
  }

  .bg-gold {
    background-color: var(--color-gold);
  }

  .bg-cream {
    background-color: var(--color-cream);
  }
</style>
